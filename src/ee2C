18) $EDITOR ~/RUSSELL-3.3/src/gc/pcr_interface.c gc/pcr_interface.c;;
19) $EDITOR ~/RUSSELL-3.3/src/gc/real_malloc.c gc/real_malloc.c;;
20) $EDITOR ~/RUSSELL-3.3/src/gc/reclaim.c gc/reclaim.c;;
