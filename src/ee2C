echo "11 mach_dep.c"
echo "12 mark.c"
echo "13 mark_roots.c"
echo "14 misc.c"
echo "15 new_hblk.c"
echo "16 obj_map.c"
echo "17 os_dep.c"
echo "18 pcr_interface.c"
echo "19 real_malloc.c"
echo "20 reclaim.c"
echo "21 setjmp_test.c"
echo "22 test.c"
echo "-----------"
echo "111 def_glob.h"
echo "222 def_proto.h"
echo "777 NOTES_DJD.txt"
echo "999 quit"
echo "select"
read select
case $select in
1) $EDITOR ~/RUSSELL-3.3/src/gc/alloc.c gc/alloc.c;;
