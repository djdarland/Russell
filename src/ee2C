6) $EDITOR ~/RUSSELL-3.3/src/gc/finalize.c gc/finalize.c;;
7) $EDITOR ~/RUSSELL-3.3/src/gc/headers.c gc/headers.c;;
8) $EDITOR ~/RUSSELL-3.3/src/gc/if_mach.c gc/if_mach.c;;
9) $EDITOR ~/RUSSELL-3.3/src/gc/if_not_there.c gc/if_not_there.c;;
10) $EDITOR ~/RUSSELL-3.3/src/gc/interface.c gc/interface.c;;
11) $EDITOR ~/RUSSELL-3.3/src/gc/mach_dep.c gc/mach_dep.c;;
12) $EDITOR ~/RUSSELL-3.3/src/gc/mark.c gc/mark.c;;
